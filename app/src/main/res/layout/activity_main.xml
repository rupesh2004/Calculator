<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="CALCULATOR"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textColor="#F76E11"
        android:textStyle="bold"

        android:gravity="center"/>

    <EditText
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_calculate_24"
        android:drawablePadding="20dp"
        android:inputType="number"
        android:paddingVertical="15dp"
        android:textColor="@color/black"
        android:textAlignment="viewEnd"
        android:textColorHint="@color/black"
        android:textSize="30dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginTop="500dp"
        android:gravity="center"
        >


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginTop="410dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b00"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="00"
            android:paddingHorizontal="2dp"
            android:textSize="40dp"
            android:layout_margin="10dp"
            android:onClick="setzerozero"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="40dp"
            android:onClick="setzero"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bdot"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="."
            android:textSize="40dp"
            android:onClick="setdot"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bequal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="
            android:textSize="40dp"
            android:onClick="setequals"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginTop="320dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton

            android:layout_width="70dp"
            android:id="@+id/b1"
            android:layout_height="70dp"
            android:text="1"
            android:onClick="setone"
            android:textSize="40dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="40dp"
            android:onClick="settwo"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="3"
            android:textSize="40dp"
            android:layout_margin="10dp"
            android:onClick="setthree"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bplus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="40dp"
            android:layout_margin="10dp"
            android:onClick="setplus"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginTop="230dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="4"
            android:onClick="setfour"
            android:textSize="40dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="5"
            android:textSize="40dp"
            android:onClick="setfive"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="6"
            android:onClick="setsix"
            android:textSize="40dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bminus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="-"
            android:onClick="setminus"
            android:textSize="40dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginTop="140dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="7"
            android:onClick="setseven"
            android:textSize="40dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="40dp"
            android:onClick="seteight"
            android:layout_margin="10dp"

            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/b9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="9"
            android:onClick="setnine"
            android:textSize="40dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bmul"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="*"
            android:onClick="setmultiplication"
            android:textSize="40dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bcancle"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="C"
            android:onClick="setclear"
            android:textSize="37dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bmod"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="%"
            android:onClick="setmodulus"
            android:textSize="37dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bclear"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:onClick="erase"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:textSize="40dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bdiv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="รท"
            android:onClick="setdivide"
            android:textSize="40dp"
            android:layout_margin="10dp"
            app:backgroundTint="@color/design_default_color_secondary_variant"

            />


    </LinearLayout>

</RelativeLayout>